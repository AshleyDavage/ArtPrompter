<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ArtPrompter.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ArtPrompter.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
		Icon="/Assets/avalonia-logo.ico"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="40"
        Title="ArtPrompter"
		TransparencyLevelHint="AcrylicBlur"
		Background="Transparent"
		Width="1440"
		Height="810">
	
    <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0">
            <Grid Height="60" ColumnDefinitions="*,Auto">
                <Border Grid.Column="0" Background="Transparent" PointerPressed="OnTitleBarPointerPressed">
                    <TextBlock Text="ArtPrompter" VerticalAlignment="Center" Margin="16,0" FontSize="14" />
                </Border>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,12,0">
                    <Button Content="-" Height="35" Click="OnMinimizeClicked" />
                    <Button Content="X" Height="35" Click="OnCloseClicked" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20" Margin="32">
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="24" Width="800">
                    <TextBlock Text="{Binding PromptText}" FontSize="28" TextAlignment="Center" TextWrapping="Wrap"
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <Button Content="Generate Prompt" Command="{Binding GeneratePromptCommand}" />
            </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                    <Button Content="Add Prompt" Command="{Binding AddNewPromptCommand}" />
                    <Button Content="View Prompt Library" Command="{Binding OpenAffixLibraryCommand}" />
                </StackPanel>
            </StackPanel>

            <Border Background="#22000000" IsVisible="{Binding IsPopupOpen}" PointerPressed="OnOverlayPointerPressed">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24">
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="24" Width="560"
                            PointerPressed="OnModalPointerPressed">
                        <ContentControl Content="{Binding ActivePopup}" />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
