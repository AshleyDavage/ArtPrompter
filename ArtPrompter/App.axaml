<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ArtPrompter.App"
             xmlns:local="using:ArtPrompter"
             xmlns:converters="using:ArtPrompter.Converters"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <Color x:Key="AppBackgroundColor">#1F1F1F</Color>
        <Color x:Key="SurfaceColor">#2A2A2A</Color>
        <Color x:Key="PrimaryColor">#9ED6D6</Color>
        <Color x:Key="PrimaryHoverColor">#B7E3E3</Color>
        <Color x:Key="TextColor">#F2F2F2</Color>
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="{DynamicResource AppBackgroundColor}" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource SurfaceColor}" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}" />
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource PrimaryHoverColor}" />
        <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}" />
    </Application.Resources>
  
    <Application.Styles>
        <FluentTheme />
        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="FontFamily" Value="Montserrat, Inter" />
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="#1C1C1C" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16,8" />
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
        <Style Selector="TabControl">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        </Style>
        <Style Selector="TabItem">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="Padding" Value="12,6" />
        </Style>
        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="#1C1C1C" />
        </Style>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppBackgroundBrush}" />
        </Style>
    </Application.Styles>
</Application>